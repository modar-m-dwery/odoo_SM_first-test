<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="major_action" model="ir.actions.act_window">
        <field name="name">Major</field>
        <field name="res_model">school_management.major</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="sm_major_view_tree" model="ir.ui.view">
        <field name="name">major</field>
        <field name="model">school_management.major</field>
        <field name="arch" type="xml">
            <tree string="Major">
                <field name="major"></field>
            </tree>
        </field>
    </record>

    <record id="sm_major_view_form" model="ir.ui.view">
        <field name="name">school_management.major.view.form</field>
        <field name="model">school_management.major</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="major"></field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>